<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">


            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="26dp"
                android:fontFamily="@font/inter_bold"
                android:text="Trip Details"
                android:textColor="@color/white"
                android:textSize="@dimen/trip_details_title_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maps"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:fontFamily="@font/inter"
                android:textSize="@dimen/trip_details_txt_size"
                app:layout_constraintStart_toStartOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <androidx.cardview.widget.CardView
                android:id="@+id/detailsMapCV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                app:cardCornerRadius="@dimen/trip_details_map_corner"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView8" >

                <FrameLayout
                    android:id="@+id/tripDetailsDirectionMapFL"
                    android:layout_width="match_parent"
                    android:layout_height="330dp"
                    android:background="#455FEF">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|end"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:src="@drawable/ic_full_screen" />
                </FrameLayout>
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/trip_details_margin_top_chart"
                android:fontFamily="@font/inter"
                android:text="Acceleration Time Graph"
                android:textColor="@color/white"
                android:textSize="@dimen/trip_details_txt_size"

                app:layout_constraintStart_toStartOf="@+id/detailsMapCV"
                app:layout_constraintTop_toBottomOf="@+id/detailsMapCV" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/accelerationTimeGraphLineCubic"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"

                app:layout_constraintEnd_toEndOf="@+id/detailsMapCV"
                app:layout_constraintStart_toStartOf="@+id/detailsMapCV"
                app:layout_constraintTop_toBottomOf="@id/textView13" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/trip_details_margin_top_chart"
                android:fontFamily="@font/inter"
                android:text="Speed Time Graph"
                android:textColor="@color/white"
                android:textSize="@dimen/trip_details_txt_size"

                app:layout_constraintStart_toStartOf="@+id/accelerationTimeGraphLineCubic"
                app:layout_constraintTop_toBottomOf="@+id/accelerationTimeGraphLineCubic" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/speedTimeGraphLineCubic"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="@+id/accelerationTimeGraphLineCubic"
                app:layout_constraintStart_toStartOf="@id/accelerationTimeGraphLineCubic"
                app:layout_constraintTop_toBottomOf="@+id/textView14" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/trip_details_margin_top_chart"
                android:fontFamily="@font/inter"
                android:text="Hard Acceleration Points"
                android:textColor="@color/white"
                android:textSize="@dimen/trip_details_txt_size"

                app:layout_constraintStart_toStartOf="@+id/speedTimeGraphLineCubic"
                app:layout_constraintTop_toBottomOf="@+id/speedTimeGraphLineCubic" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/hardAccelerationPointGraphLineCubic"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="@+id/speedTimeGraphLineCubic"
                app:layout_constraintStart_toStartOf="@id/speedTimeGraphLineCubic"
                app:layout_constraintTop_toBottomOf="@+id/textView15" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/trip_details_margin_top_chart"
                android:fontFamily="@font/inter"
                android:text="Hard Breaking Points"
                android:textColor="@color/white"
                android:textSize="@dimen/trip_details_txt_size"

                app:layout_constraintStart_toStartOf="@+id/hardAccelerationPointGraphLineCubic"
                app:layout_constraintTop_toBottomOf="@+id/hardAccelerationPointGraphLineCubic" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/hardBreakingPointGraphLineCubic"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="@+id/hardAccelerationPointGraphLineCubic"
                app:layout_constraintStart_toStartOf="@id/hardAccelerationPointGraphLineCubic"
                app:layout_constraintTop_toBottomOf="@+id/textView16" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</LinearLayout>